            .code-editor.col-xs-6
              %h5
                Editor
                %small (write code below)
              .editor<
                var canvas = document.getElementById('line_to_example1');
                var context = canvas.getContext("2d");
                context.clearRect(0, 0, 450, 300);
                \
                context.fillStyle = '#0F278F';
                context.fillRect(50, 50, 100, 200);
                \
                context.fillStyle = 'white';
                context.fillRect(150, 50, 100, 200);
                \
                context.fillStyle = '#DB5443';
                context.fillRect(250, 50, 100, 200);

              .buttons.py-1
